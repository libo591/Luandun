<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme_Default" parent="Base.Theme.AppCompat.Light">
        <item name="colorPrimary">@color/day_colorPrimary</item>
        <item name="colorPrimaryDark">@color/day_colorPrimaryDark</item>
        <item name="android:textColorLink">#0b9a27</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="menu_bg">@drawable/day_layoutbg</item>
        <item name="menu_line">@color/day_line_color</item>
        <item name="tab_block">@drawable/image_sliding_block</item>
        <item name="window_bg">@color/day_windows_bg</item>
        <item name="list_bg">@drawable/day_list_bg</item>
        <item name="android:editTextColor">@color/day_edit_color</item>
    </style>

    <!-- 夜间模式 -->
    <style name="Theme_Night" parent="@style/Theme.AppCompat">
        <item name="colorPrimary">@color/night_colorPrimary</item>
        <item name="colorPrimaryDark">@color/night_colorPrimaryDark</item>
        <item name="android:textColorLink">@color/night_colorPrimary</item>
        <item name="android:windowBackground">@color/night_windows_bg</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="menu_bg">@drawable/night_layoutbg</item>
        <item name="menu_line">@color/night_line_color</item>
        <item name="tab_block">@drawable/night_image_sliding_block</item>
        <item name="window_bg">@color/night_windows_bg</item>
        <item name="list_bg">@drawable/night_list_bg</item>
        <item name="android:editTextColor">@color/night_edit_color</item>
    </style>
</resources>
