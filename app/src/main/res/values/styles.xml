<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="startback" parent="AppTheme">
        <item name="android:windowBackground">@drawable/start_back</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarStyle -->
    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarButtonStyle -->
    <style name="ButtonBarButton" />

    <!-- menu -->
    <style name="menulayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/menu_bg</item>
    </style>
    <style name="menuitemlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?attr/menu_bg</item>
    </style>
    <style name="menuimagestyle">
        <item name="android:layout_marginLeft">@dimen/normal_h_margin</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>
    <style name="menutextstyle">
        <item name="android:layout_marginLeft">@dimen/normal_h_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">@dimen/menu_textsize</item>
    </style>

    <style name="menuline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/menu_line</item>
    </style>

    <!-- tab -->
    <style name="tablayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/menu_bg</item>
    </style>
    <style name="tabtextstyle">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/menu_textsize</item>
    </style>

    <!-- -->
    <style name="netlistitem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:textSize">@dimen/menu_textsize</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="netlistitem_image">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/menu_textsize</item>
    </style>
    <style name="netinfowindow_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:editTextColor">?attr/editTextColor</item>
        <item name="android:selectable">false</item>
    </style>

    <style name="netinfowindow_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/button_bg</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="phonelistitem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">?attr/menu_bg</item>
    </style>

    <style name="phonelistitem_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_marginLeft">@dimen/normal_h_margin</item>
        <item name="android:textSize">@dimen/menu_textsize</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="passitem_text">
        <item name="android:layout_margin">@dimen/normal_h_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/menu_textsize</item>
    </style>
    <style name="passitem_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="setting_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="setting_content" parent="setting_title">
        <item name="android:textSize">14dp</item>
    </style>
    <style name="normalicon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_marginLeft">@dimen/normal_h_margin</item>
    </style>

    <style name="clean_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">?attr/button_bg</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="tulinglistitem_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:layout_marginLeft">@dimen/normal_h_margin</item>
        <item name="android:layout_marginRight">@dimen/normal_h_margin</item>
        <item name="android:textSize">@dimen/menu_textsize</item>
    </style>

    <style name="themelistitem_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">@dimen/menu_textsize</item>
        <item name="android:gravity">center</item>

    </style>
</resources>
