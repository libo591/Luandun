<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingTop="8dp"
    android:paddingBottom="8dp" android:paddingLeft="16dp"
    android:paddingRight="16dp">
    <TextView
        android:id="@+id/themeitem_text"
        style="@style/themelistitem_text">
    </TextView>
    <RelativeLayout
        android:id="@+id/themeitem_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:visibility="gone" android:background="@drawable/theme_curr_back">
        <TextView
            android:text="当前模式"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"/>
    </RelativeLayout>
</FrameLayout>
