<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="?attr/menu_bg">
    <ImageView
        android:id="@+id/autostart_item_icon"
        style="@style/normalicon" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
    <TextView
        android:id="@+id/autostart_item_textview"
        style="@style/setting_title" android:layout_width="wrap_content"
        android:layout_toRightOf="@id/autostart_item_icon" />
    <TextView
        android:id="@+id/autostart_item_size"
        style="@style/setting_title" android:layout_width="wrap_content"
        android:layout_alignParentRight="true" android:layout_centerVertical="true"
        android:layout_margin="16dp" />
</RelativeLayout>