<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:background="?attr/menu_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical">
        <TextView
            android:id="@+id/settings_maintitle_title"
            style="@style/setting_title" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="horizontal">
            <EditText
                android:id="@+id/settings_maintitle_edittext"
                android:text="@string/main_title"
                style="@style/setting_content"
                android:layout_width="200dp"
                android:enabled="false"
                android:textColor="?attr/colorPrimary"/>
            <TextView
                android:id="@+id/settings_maintitle_lock"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/menu_textsizebig" android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <ListView android:id="@+id/settings_listview"
        android:layout_width="match_parent" android:layout_height="match_parent">
    </ListView>
</LinearLayout>
